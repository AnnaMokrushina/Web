@model IList<LessonProject.Model.Message>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}

@for (int i = 0; i < Model.Count; i++)
{
    <li>@Model[i].Statement     @Model[i].User.Email     @Model[i].AddedDate</li>
}

@using(Html.BeginForm("Index", "Messages"))
{
	@Html.TextBox("statement", string.Empty)
	<input type="submit" />
}
